  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "ts-node -r tsconfig-paths/register src/scripts/performance-test.ts",
    "archive-data": "ts-node -r tsconfig-paths/register src/scripts/archive-data.ts",
    "analyze": "ANALYZE=true next build",
    "typecheck": "tsc --noEmit",
    "typecheck:build": "tsc -p tsconfig.build.json --noEmit",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "prepare": "husky install",
    "setup-supabase": "node scripts/setup-supabase.js",
    "test-supabase": "node scripts/test-supabase.js",
    "db:indexes": "ts-node -r tsconfig-paths/register src/scripts/create-indexes.ts",
